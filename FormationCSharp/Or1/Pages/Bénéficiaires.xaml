<PageFunction x:Class="Or.Pages.bénéficiaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Bénéficiaire" KeepAlive="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="Titre" HorizontalAlignment="Center" Margin="0,81,0,0" TextWrapping="Wrap" Text="Bénéficiaires" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold"/>

        <StackPanel Margin="10,122,10,213" Orientation="Vertical" Grid.Column="0">
            <TextBlock x:Name="Numero"  Margin="0,0,0,8" HorizontalAlignment="Stretch"  TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
            <TextBlock x:Name="Nom"     Margin="0,0,0,8" HorizontalAlignment="Stretch"  TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>
            <TextBlock x:Name="Prenom"  Margin="0,0,0,8" HorizontalAlignment="Stretch"  TextWrapping="Wrap" VerticalAlignment="Stretch" Background="#FFD2D0D0" Height="20" FontSize="14"/>

        </StackPanel>
        <ListView x:Name="listView" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,54,0,0" Width="460" RenderTransformOrigin="0.5,2.363" Height="241" Grid.Column="2" SelectionChanged="listView_SelectionChanged_1">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" Width="90">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding NomClient}"
                                        Style="{StaticResource TextColumnStyle}"
                                        TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Prénom" Width="90">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding PrenomClient}"
                                        Style="{StaticResource TextColumnStyle}"
                                        TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="n°Compte" Width="80">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding IdtCpt}"
                                        Style="{StaticResource TextColumnStyle}"
                                        TextAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Actions"  Width="120">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="Supprimer" CommandParameter="{Binding IdtCpt}" Content="Supprimer" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="30" Width="120" Click="Supprimer_beneficiaire"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Retour" Content="Retour" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Height="30" Width="90" Click="Retour_Click"/>
        <Button x:Name="Ajouter" Content="Ajouter un bénéficiaire" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Height="30" Width="210" Click="Rajouter_Bénéficiaire" RenderTransformOrigin="0.167,0.5" Grid.Column="2"/>

    </Grid>
</PageFunction>
